<%- include ('partials/head') %>
  <div class="container my-4">
    <% if (paciente) { %>
      <div class="card">
        <div class="card-header">
          <h1 class="h4 mb-0 text-uppercase fw-semibold">Detalles del Paciente</h1>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item fw-semibold"><strong>ID:</strong> <span class="text-primary">
              <%= paciente.id %>
            </span></li>
          <li class="list-group-item"><strong>Nombre:</strong>
            <%= paciente.nombre %>
          </li>
          <li class="list-group-item"><strong>Apellidos:</strong>
            <%= paciente.apellidos %>
          </li>
          <li class="list-group-item text-muted"><strong>Fecha de nacimiento:</strong>
            <%= new Date(paciente.fechaNacimiento).toISOString().slice(0, 10) %>
          </li>
          <li class="list-group-item"><strong>Peso:</strong>
            <%= paciente.peso !=null ? Number(paciente.peso).toFixed(2) + ' kg' : 'N/D' %>
          </li>
          <li class="list-group-item"><strong>Temperatura:</strong>
            <%= paciente.temperatura !=null ? Number(paciente.temperatura).toFixed(1) + ' °C' : 'N/D' %>
          </li>
        </ul>
        <div class="card-body">
          <a href="/" class="btn btn-primary">Volver al listado</a>
        </div>
      </div>
      <% } else { %>
        <div class="alert alert-warning" role="alert">No se encontró el paciente solicitado.</div>
        <a href="/" class="btn btn-secondary">Volver al listado</a>
        <% } %>
  </div>

  <%- include ('partials/footer') %>